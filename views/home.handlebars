<div class="container">
<div id="mensajeExito" class="mt-3 text-primary"></div>
<h1 class="my-3 ">{{title}}</h1>
  <form id="formularioDeporte" action="/agregar" method="post" class="border rounded p-4">
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Nombre</label>

      <div class="col-sm-10 mb-3">
        <input id="nombre" type="text" class="form-control" name="nombre" />
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Precio</label>

      <div class="col-sm-10 mb-3">
        <input id="precio" type="text" class="form-control" name="precio" />
      </div>
    </div>

    <button id="btnSubmit" class="btn btn-info" type="submit">Agregar</button>
  </form>
{{>partials/tablaDeportes}}
</div>
